{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["ES2022"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "nodenext" 
  },
  "include": [
    "src/types/index.d.ts", 
    "index.ts", 
    "app.ts", 
    "src/**/*"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"  // Assuming you create a types folder in your src directory
  ],
  "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
}
